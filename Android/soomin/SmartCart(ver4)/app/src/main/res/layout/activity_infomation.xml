<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dsm2016.smartcartver4.infomation"
    android:background="@drawable/newbackground2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:layout_toLeftOf="@id/searchButton"
        android:layout_marginRight="70dp"
        android:layout_marginTop="116dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/nav_arrow"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="110dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/list"
        android:id="@+id/cartButton"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="118dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/image_shape"
            android:layout_alignParentTop="true"
            android:id="@+id/infoImageButton"
            android:src="@drawable/cart3"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:elevation="10dp"
            android:layout_width="30dp"
            android:layout_height="46dp"
            android:src="@drawable/tape"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_alignTop="@id/infoImageButton"
            android:layout_marginTop="124dp"
            android:hint="Bottle"
            android:padding="2dp"
            android:textSize="20sp"
            android:id="@+id/textName"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_alignTop="@id/infoImageButton"
            android:layout_marginTop="156dp"
            android:layout_marginLeft="20dp"
            android:hint="price"
            android:textSize="20sp"
            android:lineSpacingExtra="0dp"
            android:padding="2dp"
            android:id="@+id/textPrice" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_alignTop="@id/infoImageButton"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="20dp"
            android:hint="company"
            android:textSize="20sp"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textCompany"/>

        <ImageButton
            android:layout_width="116dp"
            android:layout_height="46dp"
            android:background="@drawable/cancel"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/cancelButton"/>

        <ImageButton
            android:layout_width="116dp"
            android:layout_height="46dp"
            android:background="@drawable/purchase"
            android:layout_marginLeft="116dp"
            android:layout_alignLeft="@id/cancelButton"
            android:id="@+id/purchaseButton"
            android:layout_marginTop="0dp"/>

    </RelativeLayout>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/newhome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="21.5dp"
        android:id="@+id/homeButton"
        android:text="Hoasdfme"/>

    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="21.5dp"
        android:text="Home"
        android:gravity="center"
        android:id="@+id/homeText"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:background="@drawable/newsearch"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:id="@+id/searchButton"/>

    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="16dp"
        android:text="Search"
        android:gravity="center"
        android:id="@+id/searchText"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/newresult"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="9dp"
        android:id="@+id/resultButton"/>

    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="186dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="9dp"
        android:text="Result"
        android:gravity="center"
        android:id="@+id/resultText"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/newinfo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="4.5dp"
        android:id="@+id/infoButton"/>
    //248
    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="264dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="4.5dp"
        android:text="Info"
        android:gravity="center"
        android:id="@+id/infoText"/>


</RelativeLayout>
