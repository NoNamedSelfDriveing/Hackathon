<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.dsm2016.smartcartver4.search"
    android:background="@drawable/newbackground2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="112dp"
        android:layout_height="300dp"
        android:scrollbars="horizontal"
        android:layout_marginTop="82dp"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/newhome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="21.5dp"
        android:id="@+id/homeButton"
        android:text="Hoasdfme"/>

    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="21.5dp"
        android:text="Home"
        android:gravity="center"
        android:id="@+id/homeText"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:background="@drawable/newsearch2"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:id="@+id/searchButton"/>


    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="16dp"
        android:text="Search"
        android:gravity="center"
        android:id="@+id/searchText"/>

    //98

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/newresult"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="9dp"
        android:id="@+id/resultButton"/>

    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="186dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="9dp"
        android:text="Result"
        android:gravity="center"
        android:id="@+id/resultText"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/newinfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="4.5dp"
        android:id="@+id/infoButton"/>
    //248
    <TextView
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:layout_marginTop="264dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:layout_marginRight="4.5dp"
        android:text="Info"
        android:gravity="center"
        android:id="@+id/infoText"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/cart"
        android:background="#00FF0000"
        android:scaleType="fitXY"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="88dp"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@id/homeButton"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="314dp"
        android:layout_height="52dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittext_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:hint="물품을 검색하세요"
            android:imeOptions="actionSend"
            android:inputType="text"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear_black_24dp" />

    </LinearLayout>


</RelativeLayout>
